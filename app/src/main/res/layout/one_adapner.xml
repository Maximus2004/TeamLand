<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#e9e5e5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="6dp" />

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="231dp"
            android:layout_gravity="right"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/krugliye_ugli"
            android:gravity="right"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffff">

                <TextView
                    android:id="@+id/applName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Кулинар"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:layout_gravity="left|center"
                    android:gravity="top"
                    android:paddingBottom="20dp"
                    android:text="  Цель"
                    android:textColor="#710c65"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/applicationID"
                    android:layout_width="wrap_content"
                    android:layout_height="148dp"
                    android:layout_gravity="left|center"
                    android:gravity="top"
                    android:paddingBottom="20dp"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <ImageButton
                    android:id="@+id/imageButton0"
                    android:layout_width="42dp"
                    android:layout_height="38dp"
                    android:layout_gravity="end"
                    android:background="@null"
                    app:srcCompat="@android:drawable/btn_star_big_off" />

                <TextView
                    android:id="@+id/writeAdout"
                    android:layout_width="305dp"
                    android:layout_height="106dp"
                    android:layout_gravity="center"
                    android:text="Требуется кулинар для помощи в выпечке, расфасовке и продаже хлебо-булочных изделий. Приходите, приходите, приходите! Лалалалалалалалалалал..."
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:translationY="5dp" />

                <TextView
                    android:id="@+id/examp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Пример работы: есть"
                    android:textColor="#710c65"
                    android:textSize="18dp"
                    android:translationY="194dp" />

                <Button
                    android:id="@+id/buttonMore"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="bottom|center_vertical|end"
                    android:text="Подробнее"
                    android:translationY="0dp" />

                <TextView
                    android:id="@+id/experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="  Опыт: 0"
                    android:textColor="#710c65"
                    android:textSize="18dp"
                    android:translationY="-28dp" />

                <Button
                    android:id="@+id/userBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="43dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="20dp"
                    android:text="Maximus"
                    android:textColor="#001eff" />

            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>